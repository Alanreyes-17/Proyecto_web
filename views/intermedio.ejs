        }

        .contenido {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .rutinas {
            margin-top: 20px;
        }

        .rutinas h2 {
            color: #4CAF50;
        }

        .rutinas ul {
            list-style-type: disc;
            padding-left: 20px;
        }

        footer {
            text-align: center;
            margin-top: 20px;
        }

